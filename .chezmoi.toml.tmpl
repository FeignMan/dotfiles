{{- $bwServerURL := promptStringOnce . "bw_server_url" "Enter your Vaultwarden Server URL" -}}
{{- $myEmail := promptStringOnce . "my_email" "Enter your Vaultwarden login email" -}}
{{- $installPythonTools := promptBoolOnce . "install_python_tools" "Do you want to install Python developer tools (uv, etc.)?" -}}

[data]
    bw_server_url = {{ $bwServerURL | quote }}
    my_email = {{ $myEmail | quote }}
    install_python_tools = {{ $installPythonTools }}

[git]
    autoCommit = true
    autoPush = true